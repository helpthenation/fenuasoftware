<odoo>
    <data>
        <record id="res_config_settings_view_form_fleet_plus" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.fleet_plus</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="fsw_base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div name="fleet_plus" position="replace">
                    <div name="fleet_plus">
                        <h2>Par Automobile +</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="module_fleet_contacts"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="module_fleet_contacts" class="o_form_label"/>
                                    <div class="text-muted">
                                        Créer un lien entre le parc automobile et les contacts
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="module_fleet_repair"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="module_fleet_repair" class="o_form_label"/>
                                    <div class="text-muted">
                                        Créer un lien entre le parc automobile et le module réparation
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>