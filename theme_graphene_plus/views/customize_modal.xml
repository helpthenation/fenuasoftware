<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- PALETTES -->
	<template id="theme_customize_plus_palettes" inherit_id="website.theme_customize" name="theme_graphene modal +">
		<xpath expr="//div[@id='tab_palettes']" position="inside">
			<div class="row"> <!-- Open 1Â°row -->
				<div class="col-xs-6">
					<label class="chd-color-combi">
						<div class="container-fluid opt gardenia">
							<div class="row">
								<div />
								<div />
								<div />
								<div />
								<div />
							</div>
							<p>Natuarai I</p>
						</div>
						<input name="colorvar" type="radio" data-xmlid="theme_graphene_plus.option_color_natuarai_1" />
					</label>
				</div>

				<div class="col-xs-6">
					<label class="chd-color-combi">
						<div class="container-fluid opt pacifico">
							<div class="row">
								<div />
								<div />
								<div />
								<div />
								<div />
							</div>
							<p>Natuarai II</p>
						</div>
						<input name="colorvar" type="radio" data-xmlid="theme_graphene_plus.option_color_natuarai_2" />
					</label>
				</div>
			</div> <!-- Close 1Â°row -->
		</xpath>
	</template>
	<template id="option_color_natuarai_1" name="option_color_natuarai_1" inherit_id="website.assets_frontend" active="True">
		<xpath expr="//link[last()]" position="after">
			<link href="/theme_graphene_plus/static/src/less/options/colors/natuarai_1.less" rel="stylesheet" type="text/less" />
		</xpath>
	</template>
	<template id="option_color_natuarai_2" name="option_color_natuarai_2" inherit_id="website.assets_frontend" active="True">
		<xpath expr="//link[last()]" position="after">
			<link href="/theme_graphene_plus/static/src/less/options/colors/natuarai_2.less" rel="stylesheet" type="text/less" />
		</xpath>
	</template>

	<!-- FONTS -->
	<template id="theme_customize_plus_fonts" inherit_id="website.theme_customize" name="theme_graphene modal +">
		<xpath expr="//div[@id='tab_fonts']/div[last()]" position="before">
			<div class="row">
				<hr />
				<h4 class="text-center">Natuarai</h4>
				<div class="col-xs-4">
					<label class="chd-fonts-combi center-block">
						<h6>Yanone Kaffeesatz</h6>
						<input name="natvar" type="radio" data-xmlid="theme_graphene_plus.option_font_natuarai_1" />
					</label>
				</div>
				<div class="col-xs-4">
					<label class="chd-fonts-combi center-block">
						<h6>Spectral</h6>
						<input name="natvar" type="radio" data-xmlid="theme_graphene_plus.option_font_spectral" />
					</label>
				</div>
				<div class="col-xs-4">
					<label class="chd-fonts-combi center-block">
						<h6>Rum Raisin</h6>
						<input name="natvar" type="radio" data-xmlid="theme_graphene_plus.option_font_rumraisin" />
					</label>
				</div>
			</div>
		</xpath>
	</template>
	<template id="option_font_natuarai_1" name="option_font_natuarai_1" inherit_id="website.assets_frontend" active="True">
		<xpath expr="//link[last()]" position="after">
			<link href="/theme_graphene_plus/static/src/less/options/fonts/YanoneKaffeesatz.less" rel="stylesheet" type="text/less" />
		</xpath>
	</template>
	<template id="option_font_spectral" name="option_font_spectral" inherit_id="website.assets_frontend" active="True">
		<xpath expr="//link[last()]" position="after">
			<link href="/theme_graphene_plus/static/src/less/options/fonts/spectral.less" rel="stylesheet" type="text/less" />
		</xpath>
	</template>
	<template id="option_font_rumraisin" name="option_font_rumraisin" inherit_id="website.assets_frontend" active="True">
		<xpath expr="//link[last()]" position="after">
			<link href="/theme_graphene_plus/static/src/less/options/fonts/rumraisin.less" rel="stylesheet" type="text/less" />
		</xpath>
	</template>

</odoo>