<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Graphene Typography -->
    <template id="google_typo_pattern" inherit_id="theme_graphene.graphene_typo_pattern">
        <xpath expr="//div[@data-selector='h1, h2']" position="before">
            <div data-selector="h1, h2">
                <li class="dropdown-submenu">
                    <a tabindex="-1" href="#"><i class="fa fa-font"/>Google Fonts</a>
                    <ul class="dropdown-menu">
                        <li data-select_class="amatic_sc"><a>Amatic SC</a></li>
                        <li data-select_class="tangerine"><a>Tangerine</a></li>
                        <li data-select_class=""><a>Default</a></li>
                    </ul>
                </li>
            </div>
        </xpath>
    </template>
</odoo>
