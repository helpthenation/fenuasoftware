<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main template -->
    <template id="report_prescription">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div>
                            <h3>Docteur Cyrille SERRA</h3>
                            <p>
                                CHIRURGIE PLASTIQUE, RECONSTRUCTRICE et ESTHETIQUE
                                <br/>
                                Ancien Interne et Assistant des Hôpitaux Universitaires
                                <br/>
                                Ancien Chef de Clinique à la Faculté de Médecine
                                <br/>
                                Membre du Collègue Française de Chirurgie Plastique, Reconstructrice et Esthétique
                                <br/>
                                <br/>
                                Non conventionné - N°647-M1143
                            </p>

                            <h2>
                                Ordonnance médicale
                            </h2>
                            <p style="text-align: left">
                                <strong>Intervenant</strong>
                                <br/>
                                <span t-esc="doc.contributor.display_name"/>
                            </p>

                            <table class="table table-condensed" name="prescription_lines">
                                <thead>
                                    <tr>
                                        <th class="text-right">Quantity</th>
                                        <th class="text-left">Product</th>
                                        <th>Description</th>
                                    </tr>
                                </thead>
                                <tbody class="invoice_tbody">
                                    <tr t-foreach="doc.prescription_lines" t-as="l">
                                        <td class="text-right">
                                            <span t-field="l.quantity"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="l.product"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="l.description"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <table class="table table-condensed" name="signature">
                            <thead>
                                <tr>
                                    <th class="text-center">
                                        <h3>
                                            Signature
                                            <span t-esc="doc.patient.display_name"/>
                                        </h3>
                                    </th>
                                    <th class="text-center">
                                        <h3>
                                            Signature Dr. Cyrille SERRA
                                        </h3>
                                    </th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
