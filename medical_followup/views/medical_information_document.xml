<odoo>
    <data>
        <!-- Form -->
        <record id="medical_information_document_form_view" model="ir.ui.view">
            <field name="name">medical.information.document.form.view</field>
            <field name="model">medical.information.document</field>
            <field name="arch" type="xml">
                <form string="Formulaire d'Information Médical">
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <field name="content" widget="html"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Documents Médicals">
                        <field name="medical_information_documents">
                            <tree>
                                <field name="name"/>
                                <field name="content" invisible="True"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </field>
        </record>

        <!-- Tree -->
        <record id="medical_information_document_tree_view" model="ir.ui.view">
            <field name="name">medical.information.document.tree.view</field>
            <field name="model">medical.information.document</field>
            <field name="arch" type="xml">
                <tree string="Formulaire d'Information Médical">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="medical_information_document_tree_action" model="ir.actions.act_window">
            <field name="name">Formulaire d'Information Médical</field>
            <field name="res_model">medical.information.document</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- MenuItem -->
        <menuitem id="medical_information_document_menuitem" parent="settings_menuitem" action="medical_information_document_tree_action" sequence="102"/>

    </data>
</odoo>