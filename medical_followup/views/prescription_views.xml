<odoo>
    <data>
        <!-- Form -->
        <record id="prescription_form_view" model="ir.ui.view">
            <field name="name">prescription.form.view</field>
            <field name="model">prescription</field>
            <field name="arch" type="xml">
                <form string="Prescription">
                    <sheet>
                        <group>
                            <group>
                                <field name="prescription_template"/>
                                <field name="patient"/>
                            </group>
                            <group>
                                <field name="date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Prescription Lines">
                                <field name="prescription_lines_count" invisible="True"/>
                                <field name="prescription_lines">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="product"/>
                                        <field name="description"/>
                                        <field name="quantity"/>
                                        <field name="product_uom"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="prescription_template_form_view" model="ir.ui.view">
            <field name="name">prescription.template.form.view</field>
            <field name="model">prescription.template</field>
            <field name="arch" type="xml">
                <form string="Prescription Modèle">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Prescription Lines">
                                <field name="prescription_lines_template">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="product"/>
                                        <field name="description"/>
                                        <field name="quantity"/>
                                        <field name="product_uom"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree -->
        <record id="prescription_tree_view" model="ir.ui.view">
            <field name="name">prescription.tree.view</field>
            <field name="model">prescription</field>
            <field name="arch" type="xml">
                <tree string="Prescription">
                    <field name="date"/>
                    <field name="patient"/>
                </tree>
            </field>
        </record>
        <record id="prescription_line_tree_view" model="ir.ui.view">
            <field name="name">prescription.line.tree.view</field>
            <field name="model">prescription.line</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="product"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <record id="prescription_template_tree_view" model="ir.ui.view">
            <field name="name">prescription.template.tree.view</field>
            <field name="model">prescription.template</field>
            <field name="arch" type="xml">
                <tree string="Prescription">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="prescription_line_template_tree_view" model="ir.ui.view">
            <field name="name">prescription.tree.view</field>
            <field name="model">prescription.line.template</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="quantity"/>
                    <field name="product"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="res_partner_prescription_tree_action" model="ir.actions.act_window">
            <field name="name">Ordonnance</field>
            <field name="res_model">prescription</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="prescription_template_action" model="ir.actions.act_window">
            <field name="name">Modèle d'ordonnace</field>
            <field name="res_model">prescription.template</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- MenuItem -->
        <menuitem id="prescription_menuitem" parent="database_menuitem" action="res_partner_prescription_tree_action" sequence="103"/>
        <menuitem id="prescription_template_menuitem" parent="settings_menuitem" action="prescription_template_action"/>
    </data>
</odoo>