<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main template -->
    <template id="report_medical_consultation">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Consultations m√©dicales</h2>
                        <p>
                            <strong>Patient</strong>
                            <h3>
                                <span t-field="doc.name"/>
                            </h3>
                        </p>
                        <t t-foreach="doc.medical_consultations" t-as="l">
                            <div style="margin-top: 25px">
                                <strong>
                                    <span t-field="l.date" t-field-options='{"format": "d MMMM y"}'/>
                                </strong>
                                <hr/>
                                <span t-field="l.description"/>
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
