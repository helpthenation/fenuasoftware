<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main template -->
    <template id="report_medical_consultation">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div t-if="doc.type==False" class="row text-center">
                            <h1>Consultations médicales</h1>
                            <h3 t-field="doc.patient.display_name"/>

                            <br/>
                            <div class="text-left">
                                <span t-field="doc.date"/>
                                <hr/>
                                <p>
                                    <span t-field="doc.description"/>
                                </p>
                            </div>
                        </div>
                        <div t-if="doc.type in ['crop']" class="row">
                            <div class="text-center">
                                <h1>COMPTE-RENDU OPERATOIRE</h1>
                                <h2 t-field="doc.patient.display_name"/>
                                <h3 t-field="doc.date"/>
                            </div>
                            <div class="text-left">
                                <p>
                                    <strong>Motif d'hospitalisation</strong>
                                    <span t-field="doc.reason"/>
                                </p>
                                <p>
                                    <strong>Esthétique</strong>
                                    <span t-field="doc.reason"/>
                                </p>
                                <p>
                                    <strong>Opérateur</strong>
                                    <span t-field="doc.operator"/>
                                </p>
                                <p>
                                    <strong>Anesthésiste</strong>
                                    <span t-field="doc.anesthetist"/>
                                </p>
                            </div>
                            <hr/>
                            <div>
                                <p>
                                    <span t-field="doc.description"/>
                                </p>
                            </div>
                            <h3 class="text-center">
                                <span t-field="doc.user_id"/>
                            </h3>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
