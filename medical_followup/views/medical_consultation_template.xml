<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main template -->
    <template id="report_medical_consultation">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div t-if="doc.type==False" class="row">
                            <h2>Consultations médicales</h2>
                            <p>
                                <strong>Patient</strong>
                                <h3>
                                    <span t-field="doc.name"/>
                                </h3>
                            </p>
                            <t t-foreach="doc.medical_consultations" t-as="l">
                                <div style="margin-top: 25px">
                                    <strong>
                                        <span t-field="l.date" t-field-options='{"format": "d MMMM y"}'/>
                                    </strong>
                                    <hr/>
                                    <span t-field="l.description"/>
                                </div>
                            </t>
                        </div>
                        <div t-if="doc.type in ['crop']" class="row">
                            <div class="text-center">
                                <h1>COMPTE-RENDU OPERATOIRE</h1>
                                <h2 t-field="doc.patient.display_name"/>
                                <h3 t-field="doc.date"/>
                            </div>
                            <div class="text-left">
                                <p>
                                    <strong>Motif d'hospitalisation</strong>
                                    <span t-field="doc.reason"/>
                                </p>
                                <p>
                                    <strong>Esthétique</strong>
                                    <span t-field="doc.reason"/>
                                </p>
                                <p>
                                    <strong>Opérateur</strong>
                                    <span t-field="doc.operator"/>
                                </p>
                                <p>
                                    <strong>Anesthésiste</strong>
                                    <span t-field="doc.anesthetist"/>
                                </p>
                            </div>
                            <hr/>
                            <div>
                                <p>
                                    <span t-field="doc.description"/>
                                </p>
                            </div>
                            <h3 class="text-center">
                                <span t-field="doc.user_id"/>
                            </h3>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
