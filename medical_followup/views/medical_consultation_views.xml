<odoo>
    <data>
        <!-- Form -->
        <record id="medical_consultation_form_view" model="ir.ui.view">
            <field name="name">medical.consultation.form.view</field>
            <field name="model">medical.consultation</field>
            <field name="arch" type="xml">
                <form string="Consultations Médicales">
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <div class="oe_left">
                            <group>
                                <label for="medical_consultation_template"/>
                                <field name="medical_consultation_template"/>
                                <group>
                                    <field name="patient"/>
                                    <field name="type"/>
                                    <field name="date"/>
                                </group>
                                <group attrs="{'invisible': [('type', '!=', 'crop')]}">
                                    <field name="operator"/>
                                    <field name="anesthetist"/>
                                    <field name="reason"/>
                                </group>
                                <label for="description"/>
                                <field name="description" default_focus="1"/>
                            </group>
                        </div>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="medical_consultation_template_form_view" model="ir.ui.view">
            <field name="name">medical.consultation.template.form.view</field>
            <field name="model">medical.consultation.template</field>
            <field name="arch" type="xml">
                <form string="Modèle de Consultations Médicales">
                    <sheet>
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <div class="oe_left">
                            <group>
                                <group>
                                    <field name="type"/>
                                </group>
                                <group attrs="{'invisible': [('type', '!=', 'crop')]}">
                                    <field name="operator"/>
                                    <field name="anesthetist"/>
                                    <field name="reason"/>
                                </group>
                            </group>
                            <h2>
                                <label for="description"/>
                            </h2>
                            <field name="description" default_focus="1"/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree -->
        <record id="medical_consultation_tree_view" model="ir.ui.view">
            <field name="name">medical.consultation.tree.view</field>
            <field name="model">medical.consultation</field>
            <field name="arch" type="xml">
                <tree string="Consultations Médicales">
                    <field name="patient"/>
                    <field name="date"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- Search Views -->
        <record id="medical_consultation_search_view" model="ir.ui.view">
            <field name="name">medical.consultation.search.view</field>
            <field name="model">medical.consultation</field>
            <field name="arch" type="xml">
                <search string="Action">
                    <field name="patient"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="medical_consultation_template_action" model="ir.actions.act_window">
            <field name="name">Modèles de Consultations Médicales</field>
            <field name="res_model">medical.consultation.template</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="medical_consultation_tree_action" model="ir.actions.act_window">
            <field name="name">Consultations Médicales</field>
            <field name="res_model">medical.consultation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="res_partner_medical_consultation_tree_action" model="ir.actions.act_window">
            <field name="name">Consultations Médicales</field>
            <field name="res_model">medical.consultation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_patient': active_id}</field>
        </record>

        <!-- MenuItem -->
        <menuitem id="medical_consultation_menuitem" parent="database_menuitem" action="medical_consultation_tree_action" sequence="102"/>
        <menuitem id="medical_consultation_template_menuitem" parent="settings_menuitem" action="medical_consultation_template_action" sequence="102"/>
    </data>
</odoo>