<odoo>
    <data>
        <!-- Form -->
        <record id="medical_intervention_form_view" model="ir.ui.view">
            <field name="name">medical.intervention.form.view</field>
            <field name="model">medical.intervention</field>
            <field name="arch" type="xml">
                <form string="Interventions Médicales">
                    <sheet>
                        <div class="oe_left">
                            <group>
                                <field name="patient"/>
                                <field name="date"/>
                            </group>
                            <label for="description"/>
                            <field name="description" default_focus="1"/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree -->
        <record id="medical_intervention_tree_view" model="ir.ui.view">
            <field name="name">medical.intervention.tree.view</field>
            <field name="model">medical.intervention</field>
            <field name="arch" type="xml">
                <tree string="Interventions Médicales">
                    <field name="patient"/>
                    <field name="date"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- Search Views -->
        <record id="medical_intervention_search_view" model="ir.ui.view">
            <field name="name">medical.intervention.search.view</field>
            <field name="model">medical.intervention</field>
            <field name="arch" type="xml">
                <search string="Action">
                    <field name="patient"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="medical_intervention_tree_action" model="ir.actions.act_window">
            <field name="name">Interventions Médicales</field>
            <field name="res_model">medical.intervention</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
        </record>
        <record id="res_partner_medical_intervention_tree_action" model="ir.actions.act_window">
            <field name="name">Interventions Médicales</field>
            <field name="res_model">medical.intervention</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_patient': active_id}</field>
        </record>

        <!-- MenuItem -->
        <menuitem id="menu_root" name="Suivis médical" parent=""/>
        <menuitem id="medical_intervention_menuitem" parent="menu_root" action="medical_intervention_tree_action"/>
    </data>
</odoo>