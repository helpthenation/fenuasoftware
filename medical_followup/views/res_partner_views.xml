<odoo>
    <data>
        <record id="res_partner_medical_followup_form" model="ir.ui.view">
            <field name="name">res.partner.medical.consultation.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="medical_followup.res_partner_medical_consultation_tree_action" type="action" class="oe_stat_button" icon="fa-stethoscope">
                        <field string="Consultations" name="medical_consultation_count" widget="statinfo" modifiers="{'readonly':true}"/>
                    </button>
                    <button name="medical_followup.res_partner_prescription_tree_action" type="action" class="oe_stat_button" icon="fa-user-md">
                        <field string="Ordonnances" name="prescriptions_count" widget="statinfo" modifiers="{'readonly':true}"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>