<odoo>
    <data>
        <record id="membership_check_wizard" model="ir.ui.view">
            <field name="name">membership.check.wizard</field>
            <field name="model">membership.check.wizard</field>
            <field name="arch" type="xml">
                <form string="Entrer votre code">
                    <field name="error" invisible="True"/>
                    <section attrs="{'invisible':['|', ('state','!=', ''), ('error', '=', True)]}">
                        <div class="text-center">
                            <h1>Scannez votre carte</h1>
                            <img src='/membership_plus/static/src/img/barcode.png' style="width: 150px"/>
                            <div>
                                <label string=" "/>
                                <field name="ref" default_focus="1" password="True" attrs="{'invisible':[('state','!=', '')]}"/>
                            </div>
                        </div>
                        <div class="row">
                            <button name="ok_action" type="object" string="OK" class="oe_highlight" style="width: 100%;" attrs="{'invisible':[('state','!=', '')]}"/>
                        </div>
                    </section>
                    <section attrs="{'invisible':[('state','=', '')]}">
                        <div style="padding-top: 10px;">
                            <h1 style="text-align: center">
                                Bienvenue
                                <field name="partner_name" class="oe_inline"/>
                            </h1>
                            <h2 style="text-align: center">
                                Etat d'abonnement :
                                <field name="state"/>
                            </h2>
                            <button name="ok_action" type="object" string="CLIQUER MOI POUR EFFACER" class="oe_highlight" style="width: 100%; height=100%" attrs="{'invisible':[('state','=', '')]}"/>
                        </div>
                    </section>
                    <section attrs="{'invisible':[('error','=', '0')]}">
                        <div style="padding-top: 10px;">
                            <h1 class="text-center">
                                <field name="error_message" readonly="True"/>
                            </h1>
                            <button name="ok_action" type="object" string="CLIQUER MOI POUR EFFACER" class="oe_highlight" style="width: 100%; height=100%" attrs="{'invisible':[('error','=', False)]}"/>
                        </div>
                    </section>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="membership_check_action">
            <field name="name">Inscription</field>
            <field name="res_model">membership.check.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>
        <menuitem name="Inscription" id="membership_check_menuitem" sequence="100" action="membership_check_action"/>
    </data>
</odoo>