<odoo>
    <data>
        <record id="res_config_settings_view_form_membership_plus" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.membership_plus</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="fsw_base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div id="membership_plus" position="replace">
                    <div id="membership_plus">
                        <h2>Gestion des Membres +</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <input type="checkbox" checked="True"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="Sélection de la période à l'adhésion" class="o_form_label"/>
                                    <div class="text-muted">
                                        Lors de l'achat d'une adhésion, donne la possibilité de sélectionner la période.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>