<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.web_plus</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="fsw_base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div name="web_plus" position="replace">
                    <div name="web_plus">
                        <h2>Web +</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="customize_background"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="customize_background" class="o_form_label"/>
                                    <div class="text-muted">
                                        Applique un background personalis√©. voir web_plus/static/scss/layout_background.scss
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>