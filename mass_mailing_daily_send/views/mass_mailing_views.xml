<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_mail_mass_mailing_form">
        <field name="name">mail.mass_mailing.form</field>
        <field name="model">mail.mass_mailing</field>
        <field name="inherit_id" ref="mass_mailing.view_mail_mass_mailing_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="put_in_daily" type="object" attrs="{'invisible': ['|', ('state', 'in', ('in_queue', 'done'))]}" class="oe_highlight" string="Daily Queued"
                        confirm="Ceci va placer le message en envoi journalier. Odoo envoi à 8h00 du matin tous les envois journalier de manière aléatoire, Confirmer vous ?"/>
            </header>
        </field>
    </record>
</odoo>