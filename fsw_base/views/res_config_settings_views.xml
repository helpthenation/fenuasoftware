<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.fenuasoftware</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="100"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Fenua Software" string="Fenua Software" data-key="fsw_base">
                        <h2>Facturation+</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box" title="Ajoute des fonctionnalités liée à la facturation et à la comptabilité">
                                <div class="o_setting_left_pane">
                                    <field name="module_account_invoicing_plus"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="module_account_invoicing_plus"/>
                                    <div class="text-muted">
                                        Ajoute des fonctionnalités liée à la facturation et à la comptabilité
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

