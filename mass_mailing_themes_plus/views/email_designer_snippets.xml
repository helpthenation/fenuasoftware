<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add themes in editor -->
    <template id="email_designer_snippets" inherit_id="mass_mailing.email_designer_snippets">
        <xpath expr="//div[@id='email_designer_themes']" position="inside">
        	
        	<!-- Copy this block to add new theme -->
        	<!-- Remember to replace sample with your theme name -->
            <div data-name="sample_theme"
                 data-img="/mass_mailing_themes_plus/static/src/img/sample_theme/sample_thumb"
                 data-images-info='{"logo": {"format": "png"}, "all": {"module": "mass_mailing_themes_plus"}}'>
                <t t-call="mass_mailing_themes_plus.sample_theme_template"/>
            </div>
            
        </xpath>
    </template>
</odoo>
