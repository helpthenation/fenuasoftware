<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- TREE -->
        <record id="purchase_account_move" model="ir.ui.view">
            <field name="name">purchase_account_move</field>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <tree editable="bottom" decoration-info="state == 'draft'" string="Journal Entries">
                    <field name="date"/>
                    <field name="account_move_template" context="{'active_ids': active_ids}"
                           domain="[('id', 'in', active_ids)]"/>
                    <field name="account_move_template_type" invisible="True"/>
                    <field name="ref"/>
                    <field name="partner_id" readonly="True"/>
                    <field name="amount_with_taxes"/>
                    <field name="amount" invisible="True"/>
                    <field name="state"/>
                    <field name='company_id' options="{'no_create': True}" groups="base.group_multi_company"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="line_ids" invisible="1">
                        <tree>
                            <field name="account_id"
                                   domain="[('company_id', '=', parent.company_id), ('deprecated', '=', False)]"/>
                            <field name="partner_id"
                                   domain="['|', ('parent_id', '=', False), ('is_company', '=', True)]"/>
                            <field name="name"/>
                            <field name="tax_line_id"/>
                            <field name="tax_ids"/>
                            <field name="debit" sum="Total Debit"/>
                            <field name="credit" sum="Total Credit"/>
                        </tree>
                    </field>
                </tree>
            </field>
        </record>
        <record id="sale_account_move" model="ir.ui.view">
            <field name="name">sale_account_move</field>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <tree editable="bottom" decoration-info="state == 'draft'" string="Journal Entries">
                    <field name="date"/>
                    <field name="account_move_template" domain="[('journal_type', '=', 'sale')]"/>
                    <field name="account_move_template_type" invisible="True"/>
                    <field name="ref"/>
                    <field name="partner_id" readonly="True"/>
                    <field name="amount_with_taxes"/>
                    <field name="amount" invisible="True"/>
                    <field name="state"/>
                    <field name='company_id' options="{'no_create': True}" groups="base.group_multi_company"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="line_ids" invisible="1">
                        <tree>
                            <field name="account_id"
                                   domain="[('company_id', '=', parent.company_id), ('deprecated', '=', False)]"/>
                            <field name="partner_id"
                                   domain="['|', ('parent_id', '=', False), ('is_company', '=', True)]"/>
                            <field name="name"/>
                            <field name="tax_line_id"/>
                            <field name="tax_ids"/>
                            <field name="debit" sum="Total Debit"/>
                            <field name="credit" sum="Total Credit"/>
                        </tree>
                    </field>
                </tree>
            </field>
        </record>

        <!-- MENUITEM -->
        <menuitem id="root_menuitem" name="Compta Facile"/>
        <menuitem id="purchase_menuitem" name="Achats" parent="root_menuitem"/>
        <menuitem id="sale_menuitem" name="Ventes" parent="root_menuitem"/>
    </data>
</odoo>