<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- TOUS -->
        <record id="sale_all_action" model="ir.actions.act_window">
            <field name="name">Tous</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('journal_id.type','=','sale')]</field>
            <field name="context"
                   eval="{'search_default_draft': 1, 'active_ids': [ref('charge_eau'), ref('charge_electricite')]}"/>
            <field name="view_ids" eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('sale_account_move')})
                ]"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Cliquer ici pour enregistrer une ventes.
                </p>
                <p>
                    Privilégié la création de facture.
                </p>
                <p>
                    Sélectionner simplement le modèle de dépense ou de charge à enregistrer puis saisissez le montant
                    TTC.
                </p>
            </field>
        </record>
        <menuitem id="sale_all_menuitem" name="Tous" parent="sale_menuitem"
                  action="sale_all_action"/>
    </data>
</odoo>