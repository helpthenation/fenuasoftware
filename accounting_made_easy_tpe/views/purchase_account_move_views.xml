<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- TOUS -->
        <record id="purchase_all_action" model="ir.actions.act_window">
            <field name="name">Paiement de l'eau</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('journal_id.type','=','purchase')]</field>
            <field name="context" eval="{'search_default_draft': 1, 'active_ids': [ref('charge_eau'), ref('charge_electricite')]}"/>
            <field name="view_ids" eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('purchase_account_move')})
                ]"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Cliquer ici pour enregistrer une charge sur l'eau
                </p>
                <p>Enregistrer votre consomation d'eau</p>
            </field>
        </record>
        <menuitem id="purchase_all_menuitem" name="Tous" parent="purchase_menuitem"
                  action="purchase_all_action"/>

        <!-- EAU -->
        <record id="charge_eau_action" model="ir.actions.act_window">
            <field name="name">Paiement de l'eau</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('journal_id.type','=','purchase')]</field>
            <field name="context" eval="{'search_default_draft': 1, 'active_ids': [ref('charge_eau')]}"/>
            <field name="view_ids" eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('purchase_account_move')})
                ]"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Cliquer ici pour enregistrer une charge sur l'eau
                </p>
                <p>Enregistrer votre consomation d'eau</p>
            </field>
        </record>
        <menuitem id="charge_eau_menuitem" name="Paiement de l'Eau" parent="purchase_menuitem"
                  action="charge_eau_action"/>
    </data>
</odoo>