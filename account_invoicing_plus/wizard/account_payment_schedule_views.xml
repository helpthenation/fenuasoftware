<?xml version="1.0" ?>
<odoo>
    <record id="account_payment_schedule_inherited" model="ir.ui.view">
        <field name="name">account.payment.schedule.inhertied</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_invoice_form" />
        <field name="arch" type="xml">
            <button name="action_validate_invoice_payment" position="after">
                <button string="Validate and Schedule Payments" name="action_validate_and_schedule_payments" type="object" class="btn-primary"/>
            </button>
        </field>
    </record>

    <record id="account_payment_schedule_form" model="ir.ui.view">
        <field name="name">Payment Schedule</field>
        <field name="model">account.payment.schedule</field>
        <field name="arch" type="xml">
            <form>
                <header>

                </header>
                <sheet>
                    <group>
                        <field name="amount"/>
                        <field name="day_of_month"/>
                        <field name="split_number"/>
                        <field name="start_this_month"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_schedule_payments" string="Ok" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>