<odoo>
    <data>
        <!-- Tree -->
        <record id="medical_intervention_tree_view" model="ir.ui.view">
            <field name="name">medical.intervention.tree.view</field>
            <field name="model">medical.intervention</field>
            <field name="arch" type="xml">
                <tree string="Interventions Médicales" editable="top">
                    <field name="patient"/>
                    <field name="date"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- Search Views -->
        <record id="medical_intervention_search_view" model="ir.ui.view">
            <field name="name">medical.intervention.search.view</field>
            <field name="model">medical.intervention</field>
            <field name="arch" type="xml">
                <search string="Action">
                    <field name="patient"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="medical_intervention_tree_action" model="ir.actions.act_window">
            <field name="name">Interventions Médicales</field>
            <field name="res_model">medical.intervention</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
        </record>
        <record id="res_partner_medical_intervention_tree_action" model="ir.actions.act_window">
            <field name="name">Interventions Médicales</field>
            <field name="res_model">medical.intervention</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="context">{'search_default_patient': active_id}</field>
        </record>

        <menuitem id="medical_intervention_menuitem" parent="" action="medical_intervention_tree_action"/>
    </data>
</odoo>