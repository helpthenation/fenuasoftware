<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.contacts_plus</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="fsw_base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div name="contacts_plus" position="replace">
                    <h2>Contact +</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="facebook_url_enable"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="facebook_url_enable" class="o_form_label"/>
                                <div class="text-muted">
                                    Ajoute le champ Facebook
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>