<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <menuitem id="mrp_repair.menu_repair_order" name="Repairs⁺"/>

        <!-- Calendar -->
        <record id="view_mrp_repair_calendar_inherited" model="ir.ui.view">
            <field name="name">mrp.repair.calendar</field>
            <field name="model">mrp.repair</field>
            <field name="arch" type="xml">
                <calendar quick_add="False" string="Planning" date_start="intervention_date" date_delay="intervention_duration">
                    <field name="name"/>
                    <field name="vehicle"/>
                    <field name="partner_id"/>
                </calendar>
            </field>
        </record>

        <!-- Kanban -->
        <record id="view_mrp_repair_kanban_inherited" model="ir.ui.view">
            <field name="name">mrp.repair.kanban</field>
            <field name="model">mrp.repair</field>
            <field name="inherit_id" ref="mrp_repair.view_mrp_repair_kanban"/>
            <field name="arch" type="xml">
                <field name="state" position="after">
                    <field name="vehicle"/>
                </field>
                <div class="row" position="inside">
                    <div class="col-xs-6">
                        <field name="vehicle"/>
                    </div>
                </div>
            </field>
        </record>

        <!-- Form -->
        <record id="view_repair_order_form_inherited" model="ir.ui.view">
            <field name="name">mrp.repair.form</field>
            <field name="model">mrp.repair</field>
            <field name="inherit_id" ref="mrp_repair.view_repair_order_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="repairer"/>
                    <field name="intervention_date"/>
                    <field name="intervention_duration" widget="float_time"/>
                    <field name="purchase_order" invisible="True"/>
                </field>
                <header position="inside">
                    <button name="action_repair_purchase_order_create" type="object" string="créer bon de commande fournisseur" class="oe_highlight"/>
                </header>
                <div name="button_box" position="inside">
                    <button name="action_created_purchase_order" type="object" class="oe_stat_button" icon="fa-pencil-square-o" string="Bon de commande" attrs="{'invisible': [('purchase_order','=',False)]}"/>
                </div>
            </field>
        </record>

        <!-- Search -->
        <record id="view_repair_order_form_filter_inherited" model="ir.ui.view">
            <field name="name">mrp.repair.select</field>
            <field name="model">mrp.repair</field>
            <field name="inherit_id" ref="mrp_repair.view_repair_order_form_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//separator" position="before">
                    <filter string="Mes ordres de réparation" domain="[('repairer','=',uid)]"/>
                </xpath>
                <field name="name" position="before">
                    <field name="vehicle"/>
                </field>
            </field>
        </record>

        <!-- Action -->
        <record id="mrp_repair.action_repair_order_tree" model="ir.actions.act_window">
            <field name="view_mode">tree,kanban,calendar,form</field>
        </record>

    </data>
</odoo>