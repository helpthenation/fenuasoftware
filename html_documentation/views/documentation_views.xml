<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="document_formview" model="ir.ui.view">
            <field name="name">html_document.formview</field>
            <field name="model">html.document</field>
            <field name="arch" type="xml">
                <form string="Document HTML">
                    <header>
                    </header>
                    <sheet>
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <field name="version"/>
                        </group>
                        <notebook>
                            <page string="Contenus">
                                <field name="html_content" widget="html_frame" options="{'editor_url': '/mass_mailing/field/email_template'}"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="html_document_action" model="ir.actions.act_window">
            <field name="name">Documents</field>
            <field name="res_model">html.document</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="root_menuitem" name="Documentations" web_icon="html_documentation,static/description/icon.png"/>
        <menuitem name="Html Documents" id="html_document_menuitem" parent="root_menuitem" action="html_document_action"/>
    </data>
</odoo>