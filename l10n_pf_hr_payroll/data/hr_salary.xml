<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	<!-- Registre des contributions -->
		<record id="contribution_cps" model="hr.contribution.register">
			<field name="name">C.P.S</field>
			<field name="note">C P S</field>
		</record>
		<record id="contribution_dicp" model="hr.contribution.register">
			<field name="name">D.I.C.P</field>
			<field name="note">D.I.C.P</field>
		</record>

	<!-- Catégorie de règle -->
		<record id="category_hs" model="hr.salary.rule.category" forcecreate="1">
			<field name="name">Heures supplémentaires</field>
			<field name="parent_id" ref="hr_payroll.ALW"/>
			<field name="code">HS</field>
			<field name="note"></field>
		</record>
		<record id="category_cst" model="hr.salary.rule.category" forcecreate="1">
			<field name="name">C.S.T</field>
			<field name="parent_id" ref="hr_payroll.DED"/>
			<field name="code">CST</field>
			<field name="note">Cotisation CST</field>
		</record>
		<record id="category_cps" model="hr.salary.rule.category" forcecreate="1">
			<field name="name">C.P.S</field>
			<field name="parent_id" ref="hr_payroll.DED"/>
			<field name="code">CPS</field>
			<field name="note">Cotisation à la CPS</field>
		</record>
		<record id="category_employer" model="hr.salary.rule.category" forcecreate="1">
			<field name="name">PATRONALE</field>
			<field name="parent_id" ref=""/>
			<field name="code">PATRONALE</field>
			<field name="note">Cotisation Patronale</field>
		</record>
		<record id="category_total" model="hr.salary.rule.category" forcecreate="1">
			<field name="name">TOTAL</field>
			<field name="parent_id" ref=""/>
			<field name="code">TOTAL</field>
			<field name="note">Totale</field>
		</record>

	<!-- Règle salariale -->
		<record id="hr_payroll.hr_rule_basic" model="hr.salary.rule">
			<field name="name">Basic</field>
			<field name="category_id" ref="hr_payroll.BASIC"/>
			<field name="code">BASIC</field>
			<field name="active" eval="True"/>
			<field name="appears_on_payslip" eval="True"/>
			
			<!-- Conditions -->
			<field name="condition_select">none</field>

			<!-- Calcul -->
			<field name="amount_select">percentage</field>
			<field name="amount_percentage_base">contract.wage</field>
			<field name="quantity">1</field>
			<field name="amount_percentage" eval="100"/>

			<!-- Contribution de la société -->
			<field name="register_id" ref=""/>
		</record>
		<record id="hr_payroll.hr_rule_taxable" model="hr.salary.rule">
			<field name="name">Brute</field>
			<field name="category_id" ref="hr_payroll.GROSS"/>
			<field name="code">GROSS</field>
			<field name="active" eval="True"/>
			<field name="appears_on_payslip" eval="True"/>
			
			<!-- Conditions -->
			<field name="condition_select">none</field>

			<!-- Calcul -->
			<field name="amount_select">code</field>
			<field name="amount_python_compute">result = categories.BASIC + categories.ALW</field>

			<!-- Contribution de la société -->
			<field name="register_id" ref=""/>
		</record>
		<record id="hr_payroll.hr_rule_net" model="hr.salary.rule">
			<field name="name">Net</field>
			<field name="category_id" ref="hr_payroll.NET"/>
			<field name="code">NET</field>
			<field name="active" eval="True"/>
			<field name="appears_on_payslip" eval="True"/>
			
			<!-- Conditions -->
			<field name="condition_select">none</field>

			<!-- Calcul -->
			<field name="amount_select">code</field>
			<field name="amount_python_compute">result = categories.BASIC + categories.ALW - categories.DED</field>

			<!-- Contribution de la société -->
			<field name="register_id" ref=""/>
		</record>
		<record id="hr_rule_advance" model="hr.salary.rule">
			<field name="sequence" eval="201"/>
			<field name="name">Avance sur salaire</field>
			<field name="category_id" ref="hr_payroll.NET"/>
			<field name="code">AVANCE</field>
			<field name="active" eval="True"/>
			<field name="appears_on_payslip" eval="True"/>
			
			<!-- Conditions -->
			<field name="condition_select">none</field>

			<!-- Calcul -->
			<field name="amount_select">percentage</field>
			<field name="amount_percentage_base">inputs.AVANCE.amount</field>
			<field name="quantity">1</field>
			<field name="amount_percentage" eval="100"/>

			<!-- Contribution de la société -->
			<field name="register_id" ref=""/>
		</record>
		<record id="hr_rule_net_to_pay" model="hr.salary.rule">
			<field name="sequence" eval="202"/>
			<field name="name">Net à payer</field>
			<field name="category_id" ref="hr_payroll.NET"/>
			<field name="code">NET_TO_PAY</field>
			<field name="active" eval="True"/>
			<field name="appears_on_payslip" eval="True"/>
			
			<!-- Conditions -->
			<field name="condition_select">none</field>

			<!-- Calcul -->
			<field name="amount_select">code</field>
			<field name="amount_python_compute">result = categories.NET</field>

			<!-- Contribution de la société -->
			<field name="register_id" ref=""/>
		</record>
	</data>
</odoo>