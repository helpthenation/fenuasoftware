<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.crm_plus</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="fsw_base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div name="crm_plus" position="replace">
                    <h2>CRM+</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                             title="Désactive le contrôle lors de la fusion des contacts">
                            <div class="o_setting_left_pane">
                                <field name="disable_merge_check"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="disable_merge_check"/>
                                <div class="text-muted">
                                    Désactive le contrôle lors de la fusion des contacts
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </field>
        </record>
    </data>
</odoo>